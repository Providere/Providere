@model Providere.Models.Calificacion
@{
    ViewBag.Title = "ReplicarComentario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert">
            &times;</button>
        @ViewBag.Error
    </div>
}
<div class="col-md-12 well">
    <h2>
        Replicar Comentario
    </h2>
    <br />
    @if (Model.IdTipoEvaluacion == 1)
    {
        <span class="text-success"><i class="glyphicon glyphicon-plus-sign"></i></span> <em>@Model.Descripcion</em>
    }
    @if (Model.IdTipoEvaluacion == 2)
    {
        <span class="text-primary"><i class="glyphicon glyphicon-record"></i></span> <em>@Model.Descripcion</em>
    }
    @if (Model.IdTipoEvaluacion == 3)
    {
        <span class="text-warning"><i class="glyphicon glyphicon-minus-sign"></i></span> <em>@Model.Descripcion</em>
             
    }
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-md-8">
                <br />
                @Html.TextArea("replicar", new { @class = "form-control ", maxlength = "140", placeholder = "Escribe tu respuesta..." })
                <p class="text-info">
                    <span class="glyphicon glyphicon-exclamation-sign"></span>M&aacute;ximo 140 caracteres</p>
            </div>
            <br />
            <br />
            <br />
            <div class="form-group">
                <div class="col-md-offset-5">
                    <button type="submit" id="btnReplicar" class="btn btn-info btn-sm">
                        Replicar</button>
                    @Html.ActionLink("Cancelar", "Index", "Calificacion", null, new { @class = "btn btn-warning btn-sm" })
                </div>
            </div>
        </div>
    }
</div>
