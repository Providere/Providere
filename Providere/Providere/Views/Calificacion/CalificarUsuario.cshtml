@model Providere.Models.Calificacion

@{
    ViewBag.Title = "Calificar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container well">
<h2>Calificar Usuario</h2>

@using (Html.BeginForm("CalificarUsuario", "Calificacion", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Califique al usuario @ViewBag.Contratacion.Usuario.Nombre @ViewBag.Contratacion.Usuario.Apellido @ViewBag.Texto <a href="/Publicacion/VisualizarPublicacion/@ViewBag.Contratacion.Publicacion.Id">@ViewBag.Contratacion.Publicacion.Titulo</a> </legend>

        @Html.Hidden("idContratacion", "ViewBag.IdContratacion.Id")
        @Html.Hidden("idTipoCalificacion", "ViewBag.IdTipoCalificacion")

        <div class="form-group">
            <div class="col-sm-2 control-label">
                @Html.DisplayName("Calificación")
            </div>
            <div class="col-sm-10 editor-field">
                @Html.RadioButton("calificacion", 1) @Html.DisplayName("Positiva")
            </div>
            <div class="col-sm-10 editor-field">
                @Html.RadioButton("calificacion", 2) @Html.DisplayName("Neutra")
            </div>
            <div class="col-sm-10 editor-field">
                @Html.RadioButton("calificacion", 3) @Html.DisplayName("Negativa")
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2 control-label">
                @Html.DisplayName("Comentario")
            </div>
            <div class="col-sm-10 editor-field">
                @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Descripcion)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-default" value="Calificar" />
            </div>
        </div>
    
    </fieldset>
    
}

<div>
    @Html.ActionLink("Volver a listado de contrataciones", "Index", "Contratacion")
</div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
