@model  IEnumerable<Providere.Models.PreguntaRespuesta>
@{
    ViewBag.Title = "Pregunta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container well">
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#responder" role="tab" data-toggle="tab">
            A responder</a></li>
        <li role="presentation"><a href="#meContestaron" role="tab" data-toggle="tab">Realizadas</a></li>
    </ul>
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="responder">
            <h2>
                Preguntas a responder</h2>
            @foreach (var item in ViewBag.PreguntasSinResponder)
            { 
                <br />
                <div class="col-md-12">
                    <h4>
                        <a href="/Publicacion/VisualizarPublicacion/@item.Publicacion.Id">@item.Publicacion.Titulo</a></h4>
                    <div>
                        <dl class="question" id="1">
                            <dd class="txt">
                                <span class="text-info"><i class="glyphicon glyphicon-comment"></i></span><span>@item.Pregunta</span></dd>
                        </dl>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-10">
                            @Html.TextArea("responder", new { @class = "form-control", placeholder = "Escribe tu respuesta..." })
                        </div>
                        <div class="form-group col-md-2">
                            <button name="btnEnviar" class="btn btn-primary btn-lg" type="submit">
                                Enviar</button>
                        </div>
                    </div>
                     <hr />
                </div>    
            }
        </div>
        <div role="tabpanel" class="tab-pane" id="meContestaron">
            <h2>
                Preguntas realizadas como cliente</h2>
            @foreach (var item in ViewBag.PreguntasQueHice)
            { 
                <br />
                <div class="col-md-12">
                    <h4>
                        <a href="/Publicacion/VisualizarPublicacion/@item.Publicacion.Id">@item.Publicacion.Titulo</a></h4>
                    <br />
                    <dl class="question" id="6">
                        <dd class="txt">
                            <span class="text-info"><i class="glyphicon glyphicon-comment"></i></span><span>@item.Pregunta</span>
                        </dd>
                        <br />
                        @if (item.Respuesta != null)
                        {
                            <dd class="col-md-offset-1">
                                <span class="text-info"><i class="glyphicon glyphicon-user"></i></span><span>@item.Respuesta</span><span
                                    class="help-block">@item.FechaRespuesta</span></dd>      
                        }
                    </dl>
                    <hr />
                </div>
            }
        </div>
    </div>
</div>
