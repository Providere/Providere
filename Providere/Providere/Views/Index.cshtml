@model  IEnumerable<Providere.Models.Contratacion>
@{
    ViewBag.Title = "Contrataciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container well">
    <h2>
        Publicaciones</h2>
    <hr />
    <br />
    <br />
    <br />
    <div class="col-md-12">
        <table class="tabla-publicaciones table table-bordered table-hover">
            <thead>
                <tr class="btn-warning">                   
                    <th>
                        @Html.DisplayName("Rubro")
                    </th>
                    <th>
                        @Html.DisplayName("SubRubro")
                    </th>
                    <th>
                        @Html.DisplayName("Titulo publicacion")
                    </th>
                    <th>
                        Calificar
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Publicacion.Rubro.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Publicacion.SubRubro.Nombre)
                        </td>
                        <td>
                            <a href="@Url.Action("VisualizarMiPublicacion", "Publicacion", new { Id = item.Id })">@Html.DisplayFor(modelItem => item.Publicacion.Titulo)</a>
                        </td>
                        <td>
                            @if (item.Publicacion.PrecioOpcion == 1)
                            {
                                @Html.Label("A Convenir")
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => item.Publicacion.Precio)
                            }
                        </td>
                        <td class="text-center">
                            @Html.ActionLink("Calificar", "Calificar", "Publicacion", new { Id = item.Publicacion.Id }, new { @class = "glyphicon glyphicon-pencil" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
