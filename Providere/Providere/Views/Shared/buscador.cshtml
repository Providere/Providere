<form action="/Buscar/Resultados" method="post">
<div id="buscador" class="combo-rubro-subrubro row">
    <div class="rubros-container col-md-5">
        <select id="selectRubro" name="selectRubro" class="IdRubro form-control">
            @if (ViewBag.Rubros != null)
            {
                <option value="0">Todos los rubros</option>
                foreach (var item in ViewBag.Rubros)
                {
                <option value="@item.Id">@item.Nombre</option>
                }
            }
        </select>
    </div>
    <div class="subrubros-container col-md-3" style="display: none">
        <div class="subrubros-select" data-estilo="horizontal">
        </div>
    </div>
    <div class="col-md-5 ubicacion-container">
        <div class="form-group">
            <input id="geocomplete" name="geocomplete" type="text" class="form-control" placeholder="Ingrese ubicaci&oacute;n. Ej: San Justo"
                autocomplete="off" />
        </div>
    </div>
    <div class="col-md-2">
        <button type="submit" id="btnBuscar" class="btn btn-primary btn-block"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Buscar</button>
        <br />
    </div>
</div>
</form>
