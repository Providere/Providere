            @if (ViewBag.MostrarPreguntas.Count > 0)
            {
                <a data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                    <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span>preguntas</a>
            }
            <div class="collapse" id="collapseExample">
                @foreach (var item in ViewBag.MostrarPreguntas)
                {
                    <br />
                    <dl class="question" id="pregunta2">
                        <dd class="txt">
                            <span class="text-info"><i class="glyphicon glyphicon-comment"></i></span><span>@item.Pregunta</span>
                        </dd>
                        <br />
                        @if (item.Respuesta != null)
                        {
                            <dd class="col-md-offset-1">
                                <span class="text-info"><i class="glyphicon glyphicon-user"></i></span>@item.Respuesta
                            </dd>
                            <dd class="col-sm-offset-2">
                                <small class="text-muted">@item.FechaRespuesta.ToString("dd/MM/yyyy hh:mm tt")</small>
                            </dd>
                        }
                    </dl>
                    <hr />
                }
            </div>
        </div>
        <div class="col-md-12">
            @if (ViewBag.Sancion == null && ViewBag.accionPadre != "VisualizarMiPublicacion" && Model.Estado == 1 && HttpContext.Current.Session["IdUsuario"] != null)
            {
                using (Html.BeginForm("Preguntar", "Pregunta", FormMethod.Post))
                {
                <div>
                    @Html.HiddenFor(model => model.Id)
                </div>
                <div>
                    @Html.HiddenFor(model => model.IdUsuario)
                </div>
                <div>
                    <br />
                    @Html.TextArea("preguntar", new { @class = "form-control", placeholder = "Escribe tu pregunta..." })
                    <p class="text-info">
                        <span class="glyphicon glyphicon-exclamation-sign"></span>No podes compartir datos
                        personales por aquí</p>
                    <button name="btnEnviar" class="btn btn-primary btn-lg" type="submit">
                        Enviar</button>
                </div>     
                }
            }
            else
            {
                if (ViewBag.Sancion == null && ViewBag.accionPadre != "VisualizarMiPublicacion" && Model.Estado == 1)
                {
                <div>
                    <br />
                    @Html.TextArea("preguntar", new { @class = "form-control", placeholder = "Escribe tu pregunta..." })
                    <p class="text-info">
                        <span class="glyphicon glyphicon-exclamation-sign"></span>No podes compartir datos
                        personales por aquí</p>
                    <button name="btnEnviar" class="btn btn-primary btn-lg disabled" type="submit">
                        Enviar</button>
                </div> 
                }
                else
                {
                    if (ViewBag.Sancion == null && ViewBag.accionPadre != "VisualizarMiPublicacion" && Model.Estado == 0)
                    {               
                <div>
                    <br />
                    @Html.TextArea("preguntar", new { @class = "form-control", placeholder = "Escribe tu pregunta..." })
                    <p class="text-info">
                        <span class="glyphicon glyphicon-exclamation-sign"></span>No podes compartir datos
                        personales por aquí</p>
                    <button name="btnEnviar" class="btn btn-primary btn-lg disabled" type="submit">
                        Enviar</button>
                </div>                         
                    }
                    else
                    {
                        if (Model.Usuario.Id != ViewBag.idUsuario)
                        {
                <small class="text-muted">Lo sentimos. Los usuarios penalizados no pueden hacer preguntas
                    hasta que su período de sanción termine.</small>  
                        }
                    }
                }
            }
        </div>
    </div>
