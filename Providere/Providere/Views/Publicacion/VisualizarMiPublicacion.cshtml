@model Providere.Models.Publicacion
@{
    ViewBag.Title = "Publicacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.Sancion != null)
{
    <div class="alert alert-danger alert-dismissable container">
        <button type="button" class="close" data-dismiss="alert">
            &times;</button>
        @if (Model.Usuario.Id != ViewBag.idUsuario)
        {
            <span>Su cuenta esta actualmente bloqueada por lo cual no puede realizar contrataciones.</span>
        }
        else
        {
            <span>Su cuenta esta actualmente bloqueada por lo cual su publicación no puede ser contratada.
            </span>
            
        }
    </div>
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert">
            &times;</button>
        @ViewBag.Error
    </div>
}
@if (ViewBag.Exito != null)
{
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert">
            &times;</button>
        @ViewBag.Exito
    </div>
}
<div id="publicacion" class="col-md-12 well">
    <div>
        @Html.HiddenFor(model => model.IdUsuario)
    </div>
    <div>
        @Html.HiddenFor(model => model.Id)
    </div>
    <div>
        <h1 class="titulo text-center col-md-12">
            @Html.DisplayFor(model => model.Titulo)
            @if (ViewBag.accionPadre == "VisualizarMiPublicacion")
            {
                
                @Html.ActionLink("Editar", "EditarPublicacion", "Publicacion", new { Id = Model.Id }, new { @class = "editar-btn btn btn-primary btn-lg pull-right " })
            }
        </h1>
    </div>
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-9">
        <div class="col-md-8">
            <h3 class="titulo-descripcion">
                Descripción</h3>
            <p>
                @Html.DisplayFor(model => model.Descripcion)</p>
        </div>
        <div class="col-md-4">
            @if (ViewBag.accionPadre != "VisualizarMiPublicacion" && ViewBag.Contratada != null)
            {
                <button name="btnTel" class="btnTel btn btn-primary btn-lg btn-block disabled" type="button">
                    <span class="glyphicon glyphicon-earphone"></span><span class="numero">@Model.Usuario.Telefono</span></button>
            }
            else
            {
                if (ViewBag.Sancion == null)
                {
                    if (ViewBag.accionPadre != "VisualizarMiPublicacion" && Model.Estado == 1 && HttpContext.Current.Session["IdUsuario"] != null)
                    {

                @Html.ActionLink("Contratar", "ContratarPublicacion", "Publicacion", Model, new { @class = "contratar-btn btn btn-primary btn-lg btn-block" })
               
                    }
                    else
                    {
                        if (ViewBag.accionPadre != "VisualizarMiPublicacion" && Model.Estado == 1)
                        {
                @Html.ActionLink("Contratar", "ContratarPublicacion", "Publicacion", Model, new { @class = "contratar-btn btn btn-primary btn-lg btn-block disabled" })
                
                 
                        }

                        else
                        {
                            if (ViewBag.accionPadre != "VisualizarMiPublicacion" && Model.Estado == 0)
                            {
                
                @Html.ActionLink("Contratar", "ContratarPublicacion", "Publicacion", Model, new { @class = "contratar-btn btn btn-primary btn-lg btn-block disabled" })
                
                           
                            }
                        }
                    <div class="text-center">
                    @if (HttpContext.Current.Session["IdUsuario"] != null)
                    {
               
                        <small class="text-muted ">No es posible contratar esta publicación en este momento.</small>
              
                    }
                    else
                    {
                        
                            
                        <small class="text-muted ">Para contratar debe estar <a href="@Url.Action("RegistrarUsuario", "Usuario")">registrado</a>.</small>
                    }
                </div> 
                    }
                }
                else
                {  
                @Html.ActionLink("Contratar", "ContratarPublicacion", "Publicacion", Model, new { @class = "contratar-btn btn btn-primary btn-lg btn-block disabled" })
                
                <div class="text-center">
                    <small class="text-muted ">No es posible contratar esta publicación en este momento.</small>
                </div>  
                }
            }
        </div>
        <div class="col-md-8">
            <h3>
                Precio
            </h3>
            <span class="precio-detalle">
                @if (Model.PrecioOpcion != null)
                {

                    if (Model.PrecioOpcion == 1)
                    {
                    @Html.Label("A Convenir") 
                    }
                    else
                    {
                    @Html.Label("$") 
                    @Html.DisplayFor(model => model.Precio)
                    }
                }
            </span>
        </div>
        <div class="col-md-12">
