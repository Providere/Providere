@model Providere.Models.Publicacion
@{
    ViewBag.Title = "VisualizarMiPublicacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container well">
    @using (Html.BeginForm("VisualizarMiPublicacion", "Publicacion", FormMethod.Post))
    {
        <h1 class="text-right">
            @if (ViewBag.accionPadre == "VisualizarMiPublicacion")
            {
                
                @Html.ActionLink(" Editar", "EditarPublicacion", "Publicacion", new { Id = Model.Id }, new { @class = "btn btn-info btn-xs glyphicon glyphicon-pencil" })
            }
        </h1>
        
        <div>
            @Html.HiddenFor(model => model.IdUsuario)
        </div>
        <div>
            @Html.HiddenFor(model => model.Id)
        </div>
 
        <h1 class="text-center">
            @Html.DisplayFor(model => model.Titulo)
        </h1>
        <hr />
        
        <div class="col-md-9">
            <div class="col-md-8">
                <h3>
                    Descripción</h3>
                <p>
                    @Html.DisplayFor(model => model.Descripcion)</p>
            </div>
            <div class="col-md-2">
                <h3>
                    Precio
                </h3>
                @if (Model.PrecioOpcion != null)
                {

                    if (Model.PrecioOpcion == 1)
                    {
                    @Html.Label("A Convenir") 
                    }
                    else
                    {
                    @Html.Label("$") 
                    @Html.DisplayFor(model => model.Precio)
                    }

                }
                <div>
                    @if (ViewBag.accionPadre != "VisualizarMiPublicacion")
                    {
                        @Html.ActionLink("Contratar", "ContratarPublicacion", "Publicacion", Model, new { @class = "btn btn-primary glyphicon glyphicon-ok" })
               
                    }
                </div>
            </div>
            <div class="col-md-12">
                <h3>
                    Calificaciones</h3>
                @if (@HttpContext.Current.Session["IdUsuario"].ToString() == Model.IdUsuario.ToString())
                {
                
                    @: Todavía no obtuviste calificaciones.
             }
                else
                {
                 
                    @Html.DisplayFor(model => model.Usuario.Nombre)
                    @: aún no posee calificaciones.
                                }
            </div>
            <div class="col-md-12">
                <h3>
                    Últimos trabajos realizados</h3>
                @ViewBag.NoExistenImagenes
                <div class="row">
                    @foreach (var item in Model.Imagen)
                    {
                        <div class="col-md-3">
                            <a class="example-image-link" href="../../Imagenes/Publicacion/@item.Nombre" data-lightbox="example-set">
                                <img src="../../Imagenes/Publicacion/@item.Nombre"  width="100%" alt="" height= "150px" />
                            </a>
                        </div>                  
                    }
                </div>
            </div>
        </div>
        <div id="ficha-publicante" class="col-md-3">
            <div class="contenedor-imagen-publicacion">
                @if (ViewBag.accionPadre == "VisualizarMiPublicacion")
                {
                
                    <img class="img-thumbnail" src="@Url.Action("MostrarImagen", "Usuario", new { id = Session["IdUsuario"] })" alt="avatar" width="100%" />
             
                }
                else
                {
                    <img class="" src="@Url.Action("MostrarFotoPerfil", "Publicacion", new { id = Model.IdUsuario })" alt="plomero" width="100%"/>
                
                }
            </div>
            <div class="contenedor-info-publicante">
                <h2>
                    @Html.DisplayFor(model => model.Usuario.Nombre)
                    @Html.DisplayFor(model => model.Usuario.Apellido)
                </h2>
                <span class="text-muted">@Html.DisplayFor(model => model.Rubro.Nombre) </span><span
                    class="badge">0</span>
                <br />
                <span class="text-muted">@Html.DisplayFor(model => model.SubRubro.Nombre) </span>
            </div>
            <div>
                <span class="glyphicon glyphicon-globe"></span><span>@Html.DisplayFor(model => model.Usuario.Ubicacion)
                </span>
            </div>
        </div>
         <div class="col-md-12">
            <div class="col-md-12">
                <h3>
                    Preguntas al prestador</h3>
                @if (ViewBag.accionPadre != "VisualizarMiPublicacion")
                {
                    <p class="text-info">
                        <span class="glyphicon glyphicon-exclamation-sign"></span>Recordá no podes compartir
                        tus datos personales por este medio</p>
                    <div class="form-group col-md-10">
                        @Html.TextArea("preguntar", new { @class = "form-control ", placeholder = "Escribe tu pregunta aqui..." })
                    </div>
                    <div class="form-group col-md-2">
                        <button name="btnEnviar" class="btn btn-primary btn-lg" type="submit">
                            Enviar</button>
                    </div>
                }
            </div>
            @* else
            {
                <div class="col-md-12">
                    <h3>
                        Preguntas al prestador</h3>
                    <p class="text-info">
                        <span class="glyphicon glyphicon-exclamation-sign"></span>Recordá no podes compartir
                        tus datos personales por este medio</p>
                    <div class="form-group col-md-10">
                        @Html.TextArea("preguntar", new { @class = "form-control ", placeholder = "Escribe tu pregunta aqui..." })
                    </div>
                    <div class="form-group col-md-2">
                        <button name="btnEnviar" class="btn btn-primary btn-lg" type="submit">
                            Enviar</button>
                    </div>
                </div>
            }*@
            <div class="col-md-12">
                @foreach (var item in Model.PreguntaRespuesta)
                {
                    if (item.Pregunta == null)
                    {
                        <p>No hay preguntas para mostrar</p>
                    }
                    else
                    {
                    <dl class="question" id="pregunta">
                        <dd class="txt">
                            <i class="glyphicon glyphicon-comment"></i><span>@item.Pregunta</span>
                        </dd>
                        <dt class="answer"><i class="glyphicon glyphicon-comments"></i></dt>
                        @if (item.Respuesta != null)
                        {
                            <dd class="col-md-offset-1">
                                <i class="glyphicon glyphicon-user"></i><span>@item.Respuesta</span>
                                <br />
                                <span class="help-block">@item.FechaRespuesta</span>
                            </dd>
                        }
                    </dl>
                    }
                    <hr />
                }
            </div>
        </div>     
    }
</div>
