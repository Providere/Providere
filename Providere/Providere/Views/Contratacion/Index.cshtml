@model IEnumerable<Providere.Models.Contratacion>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Contrataciones realizadas</h2>

<table class="tabla-publicaciones table table-bordered table-hover">
    <tr>
        <th>
            Publicacion
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            "@Html.DisplayFor(modelItem => item.Publicacion.Titulo)" de @Html.DisplayFor(modelItem => item.Usuario.Nombre) @Html.DisplayFor(modelItem => item.Usuario.Apellido)
        </td>
        <td class="text-right">
            @Html.ActionLink("Calificar servicio", "CalificarUsuario", "Calificacion", new { idContratacion = item.Id }) 
        </td>
    </tr>
}

</table>
