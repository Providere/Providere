@model Providere.Models.Usuario
@{
    ViewBag.Title = "Nueva Contrasenia";
    Layout = "~/Views/Shared/_Registracion.cshtml";
}
<div class="container well">
 <div class="content">
       @using (Html.BeginForm("NuevaContrasenia", "Usuario", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div id="page-wrapper">
                <h2>
                 Restablecer mi contraseña</h2>
                @Html.ValidationSummary(true)
                <hr />
                <div class="row">
                    @Html.Label("Contraseña nueva", new { @class = "col-sm-5 control-label" })
                    <div class="col-xs-3">
                        @Html.PasswordFor(m => m.Contrasenia, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Contrasenia)
                        <small class="text-info"><span class="glyphicon glyphicon-exclamation-sign"></span>Entre
                            5 y 10 caracteres. Debe contener, al menos, 1 numero y 1 mayuscula</small>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-5">
                        <button id="btnConfirmar" type="submit" class="btn btn-info">
                            Confirmar
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

