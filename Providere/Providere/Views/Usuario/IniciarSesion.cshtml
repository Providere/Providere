@model Providere.Models.Usuario
@{
    ViewBag.Title = "IniciarSesion";
    Layout = "~/Views/Shared/_Registracion.cshtml";
}
<div class="content">
    @using (Html.BeginForm("IniciarSesion", "Usuario", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div id="page-wrapper">
            <h2>
                Iniciar Sesi&oacute;n</h2>
            <div>
                ¿A&uacute;n no est&aacute;s reg&iacute;strado? @Html.ActionLink("Registrate gratis", "RegistrarUsuario", "Usuario")</div>
            @Html.ValidationSummary(true)
            <hr />
            <div class="row">
                @Html.Label("Correo electronico", new { @class = "col-sm-5 control-label" })
                <div class="col-xs-3">
                    @Html.TextBoxFor(m => m.Mail, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Mail)
                </div>
            </div>
            <br />
            <div class="row">
                @Html.Label("Contraseña", new { @class = "col-sm-5 control-label" })
                <div class="col-xs-3">
                    @Html.PasswordFor(m => m.Contrasenia, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Contrasenia)
                    <small class="text-info"><span class="glyphicon glyphicon-exclamation-sign"></span>Entre
                        5 y 10 caracteres,debe contener 1 numero y 1 mayuscula</small>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-5">
                    <button id="btnIngresar" type="submit" class="btn btn-info">
                        Ingresar
                    </button>
                    @Html.ActionLink("Cancelar", "Index", "Index", null, new { @class = "btn btn-warning" })
                    <br />
                    <br />
                    <a href="#" class="pull-center need-help">Necesita ayuda? </a><span class="clearfix">
                    </span>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
